<?xml version="1.0"?>
<ruleset name="OuterEdgeMagento">
    <config name="installed_paths" value="vendor/magento/magento-coding-standard/,vendor/magento/php-compatibility-fork/" />

    <config name="testVersion" value="7.4-"/>

    <arg value="p"/>
    <arg value="s"/>
    <arg value="n"/>

    <arg name="colors"/>
    <arg name="extensions" value="php" />

    <exclude-pattern>*/vendor/*</exclude-pattern>

    <rule ref="./ruleset.xml" />
    <rule ref="Magento2" />
    <rule ref="PHPCompatibility" />

    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>
</ruleset>
